<%- include('partials/header') -%>
<main>
    <div class="container">
        <div class="create-form">
            <form  class="form" action="/events" method="POST">
                <div class="flex">
                    Title:
                    <input type="text" name="title" value="<%= event.title%>">
                </div>
                <div class="flex">
                    Summary:
                    <textarea name="summary" id="" cols="30" rows="10"><%= event.summary%></textarea>
                </div>
                <div class="flex">
                    Host : 
                    <input type="text" name="host" value="<%= event.host%>">
                </div>
                <div class="flex">
                    Start Date :
                    <input type="date" name="start_Date" id="" value="<%= event.start_date%>">
                </div>
                <div class="flex">
                    End Date
                    <input type="date" name="end_date" id="" value="<%= event.end_date%>">
                </div>
                <div class="flex">
                    Category :
                    <input type="text" name="event_categories" value="<%= event.event_categories%>">
                </div>
                <div class="flex">
                    Location :
                    <input type="text" name="location" value="<%= event.location%>">
                </div>
                <div class="flex">
                    Likes :
                    <input type="number" name="likes" value="<%= event.likes%>">
                </div>
                <div class="flex">
                    <button class="btn" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
    
</main>

